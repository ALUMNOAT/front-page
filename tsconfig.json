{
  "compilerOptions": {
    "sourceMap": true,
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es6",
    "jsx": "react",
    "jsxFactory": "h",
    "skipLibCheck": true,
    "plugins": [
      { 
        "name": "typescript-plugin-css-modules" 
      }
    ]
  },
  "include": [
    "./src/**/*.tsx",
    "./src/**/*.ts"
  ]
}